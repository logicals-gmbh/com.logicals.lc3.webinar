/*  This sample contains a program to count up or down.  */
PROGRAM Counter

	VAR
    	/* If 'up' = 'TRUE', counter counts up. */
		up : BOOL;
		/* 'count' is incremented/decremented by '1' for each cycle. */
		count : INT;
	END_VAR

	IF up THEN
		count := count + 1;
	ELSE
		count := count - 1;
	END_IF;

END_PROGRAM